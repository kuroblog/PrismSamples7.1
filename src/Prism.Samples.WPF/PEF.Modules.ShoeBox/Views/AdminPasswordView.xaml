                         Grid.ColumnSpan="2" 
                         x:Name="AdminPasswordBox" 
                         Width="528" 
                         VerticalAlignment="Center" 
                         HorizontalContentAlignment="Center"
                         FontSize="78" 
                         PasswordChar="*">
                <i:Interaction.Behaviors>
                    <beh:PasswordBoxBindingPasswordBehavior PasswordContent="{Binding AdminPassKey, Mode=TwoWay}"/>
                    <beh:PasswordBoxOnLoadedCleanBehavior/>
                </i:Interaction.Behaviors>
            </PasswordBox>

